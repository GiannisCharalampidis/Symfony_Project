<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    {% for label, messages in app.flashes %}
        <div class="flash-{{ label }}" style="display: none;">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
    {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const flashMessages = document.querySelectorAll('.flash-success p, .flash-error p');
                flashMessages.forEach(function(message) {
                    alert(message.textContent);
                });
            });
        </script>
    {% endblock %}
</body>
</html>